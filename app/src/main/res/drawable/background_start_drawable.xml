        <bitmap
            android:gravity="fill"
            android:src="@drawable/background_start" />
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="@color/gradient_start_transparent"
                android:endColor="@color/gradient_end_transparent"
                android:type="linear" />
        </shape>
    </item>
</layer-list>