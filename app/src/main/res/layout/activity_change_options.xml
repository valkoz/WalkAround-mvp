<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.walkaround.walkaround.activities.ChangeOptionsActivity"
    android:orientation="vertical">

    <TextView
        android:paddingTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Длительность маршрута: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="3 часа 3 минуты"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:textColor="@color/secondaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="40dp"
        android:progressTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimary"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:max="16"
        android:progress="3" />

    <TextView
        android:paddingTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Протяженность маршрута: "
        android:fontFamily="@font/montserrat_bold"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="6 километров"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:textColor="@color/secondaryTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:max="16"
        android:progress="3"
        android:progressTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimary" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Смена категорий"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent" />

    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Закрепление мест"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:background="@drawable/gradient">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Обновить маршрут"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/buttonw"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
