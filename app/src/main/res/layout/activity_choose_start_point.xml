<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.StartPointActivity">

    <fragment
        android:id="@+id/place_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/place_autocomplete" />

    <LinearLayout
        android:id="@+id/choose_start_point_button_layout"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/gradient">

        <Button
            android:id="@+id/go_next_button1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/buttonw"
            android:textColor="@color/colorPrimary"
            android:drawableEnd="@drawable/icon_arrow_p" />
    </LinearLayout>


</RelativeLayout>
